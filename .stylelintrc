{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "declaration-empty-line-before": "never",
        "number-leading-zero": "never",
        "at-rule-no-unknown": [true, { "ignoreAtRules": ["mixin", "content", "include", "for", "if", "else", "function", "return"] }],
        "at-rule-empty-line-before": ["always", { "ignore": ["inside-block", "blockless-after-same-name-blockless", "after-comment"] }],
        "unit-no-unknown": [true, { "ignoreUnits": ["/^[$].*$/"] }]
    }
}
